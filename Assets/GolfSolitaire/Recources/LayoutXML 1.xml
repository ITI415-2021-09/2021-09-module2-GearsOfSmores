<xml>
	<!-- This file holds info for laying out the Prospector card game. -->
	
	<!-- The multiplier is multiplied by the x and y attributes below. -->
	<!-- This determines how loose or tight the layout is. --> 
	<multiplier x="1" y="1" />
	
	<!-- In the XML below, id is the number of the card -->
	<!-- x and y set position -->
	<!-- faceup is 1 if the card is face-up -->
	<!-- layer sets the depth layer so cards overlap properly -->
	<!-- hiddenby is the ids of cards that keep a card face-down -->
	
	<!-- Layer0, the deepest cards. -->
	<slot id="0" x="-9" y="4" faceup="1" layer="0" hiddenby="7,14,21,28" />
	<slot id="1" x="-6"  y="4" faceup="1" layer="0" hiddenby="8,15,22,29" />
	<slot id="2" x="-3"  y="4" faceup="1" layer="0" hiddenby="9,16,23,30" />
	<slot id="3" x="0"  y="4" faceup="1" layer="0" hiddenby="10,17,24,31" />
	<slot id="4" x="3"  y="4" faceup="1" layer="0" hiddenby="11,18,25,32" />
	<slot id="5" x="6"  y="4" faceup="1" layer="0" hiddenby="12,19,26,33" />
	<slot id="6" x="9"  y="4" faceup="1" layer="0" hiddenby="13,20,27,34" />
	
	<!-- Layer1, the next level. -->
	<slot id="7" x="-9" y="3" faceup="1" layer="1" hiddenby="14,21,28" />
	<slot id="8" x="-6" y="3" faceup="1" layer="1" hiddenby="15,22,29" />
	<slot id="9" x="-3" y="3" faceup="1" layer="1" hiddenby="16,23,30" />
	<slot id="10" x="0"  y="3" faceup="1" layer="1" hiddenby="17,24,31" />
	<slot id="11" x="3"  y="3" faceup="1" layer="1" hiddenby="18,25,32" />
	<slot id="12" x="6"  y="3" faceup="1" layer="1" hiddenby="19,26,33" />
	<slot id="13" x="9"  y="3" faceup="1" layer="1" hiddenby="20,27,34" />
	
	<!-- Layer2, the next level. -->
	<slot id="14"  x="-9" y="2" faceup="1" layer="2" hiddenby="21,28" />
	<slot id="15" x="-6" y="2" faceup="1" layer="2" hiddenby="22,29" />
	<slot id="16" x="-3" y="2" faceup="1" layer="2" hiddenby="23,30" />
	<slot id="17" x="0" y="2" faceup="1" layer="2" hiddenby="24,31" />
	<slot id="18" x="3"  y="2" faceup="1" layer="2" hiddenby="25,32" />
	<slot id="19" x="6"  y="2" faceup="1" layer="2" hiddenby="26,33" />
	<slot id="20" x="9"  y="2" faceup="1" layer="2" hiddenby="27,34" />
	
	
	<!-- Layer3, the next level. -->
	<slot id="21" x="-9" y="1" faceup="1" layer="3" hiddenby="28" />
	<slot id="22" x="-6" y="1" faceup="1" layer="3" hiddenby="29"/>
	<slot id="23" x="-3" y="1" faceup="1" layer="3" hiddenby="30"/>
	<slot id="24" x="0" y="1" faceup="1" layer="3" hiddenby="31"/>
	<slot id="25" x="3" y="1" faceup="1" layer="3" hiddenby="32"/>
	<slot id="26" x="6"  y="1" faceup="1" layer="3" hiddenby="33"/>
	<slot id="27" x="9"  y="1" faceup="1" layer="3" hiddenby="34"/>

	<!-- Layer4, the top level at the bottom of the screen. -->
	<slot id="28" x="-9" y="0" faceup="1" layer="6" />
	<slot id="29" x="-6" y="0" faceup="1" layer="6" />
	<slot id="30" x="-3" y="0" faceup="1" layer="6" />
	<slot id="31" x="0" y="0" faceup="1" layer="6" />
	<slot id="32" x="3" y="0" faceup="1" layer="6" />
	<slot id="33" x="6"  y="0" faceup="1" layer="6" />
	<slot id="34" x="9"  y="0" faceup="1" layer="6" />
	
	<!-- This positions the draw pile and staggers it -->
	<slot type="drawpile" x="2" y="-6" xstagger="0.15" layer="4"/>
	
	<!-- This positions the discard pile and target card -->
	<slot type="discardpile" x="-1" y="-6" layer="5"/>
	
</xml>
	